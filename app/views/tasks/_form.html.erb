<div class="row">
  <div class="col-xs-12 sol-sm-8 col-sm-offset-2 col-lg-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :status, "題名" %>
        <%= f.text_field :status, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <%= f.label :content, "タスク" %>
        <%= f.text_field :content, class: "form-control" %>
      </div>
  
      <%= f.submit "作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>